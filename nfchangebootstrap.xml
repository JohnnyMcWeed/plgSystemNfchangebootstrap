	<version>1.0.0</version>
	<description>PLG_CHANGEBOOTSTRAP_DESCRIPTION</description>
	<files>
		<filename plugin="nfchangebootstrap">nfchangebootstrap.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_nfchangebootstrap.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_nfchangebootstrap.sys.ini</language>
		<language tag="de-CH">language/de-CH/de-CH.plg_system_nfchangebootstrap.ini</language>
		<language tag="de-CH">language/de-CH/de-CH.plg_system_nfchangebootstrap.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="cdn_source"
					   type="radio"
					   default="1"
					   class="btn-group btn-group-yesno"
					   description="JFIELD_PLG_SYSTEM_NFCHANGEBOOTSTRAP_CDN_DESCRIPTION"
					   label="JFIELD_PLG_SYSTEM_NFCHANGEBOOTSTRAP_CDN_LABEL">
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
